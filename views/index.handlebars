
<h1>Eat-da-Burger!</h1>

<div class="container">
  <div class="row">

    <div class="col-sm">
      <h2>Order-da-Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name">
        </div>
        <div class="form-group">
          <label for="devoured">Order Burger?</label><br>
          <input type="radio" name="Devoured" value="1"> YES!<br>
        </div>
        <button type="submit" class="btn btn-warning">Add Burger</button>
      </form>
    </div>

    <div class="col-sm">
    <h2>Order Up!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-sm">
  <h2>Order-anotha-Burger!</h2>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>
</div>

</div>
</div>